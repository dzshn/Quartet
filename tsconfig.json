{
    "include": [
        "src/**/*.js",
        "src/**/*.ts",
        "src/**/*.svelte",
    ],
    "compilerOptions": {
        "strict": true,

        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ESNext",

        "baseUrl": "./src/",
        "paths": {
            "@api": ["./api"],
            "@api/*": ["./api/*"],
            "@components/*": ["./components/*"],
            "@patcher": ["./patcher"],
        }
    }
}

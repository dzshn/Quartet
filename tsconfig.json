{
    "include": [
        "src/**/*.js",
        "src/**/*.ts",
        "src/**/*.svelte",
    ],
    "compilerOptions": {
        "strict": true,

        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ESNext",

        "baseUrl": "./src/",
        "paths": {
            "@components/*": ["./components/*"],
        }
    }
}
